  <button onclick="clickCoin()">üí∞ CLIQUE!</button>
  <div class="bar"><div class="fill" id="xpbar"></div></div>
  <div class="stats">
    <p>Moedas: <strong id="coins">0</strong></p>
    <p>Por clique: <strong id="perClick">1</strong> | Auto: <strong id="auto">0</strong>/s</p>
  </div>

  <div class="section">
    <strong>üéÅ Recompensa</strong>
    <div class="mission">
      <span>Assistir an√∫ncio</span>
      <button class="secondary" onclick="showAd()">Ganhar +100</button>
    </div>
  </div>

  <div class="section">
    <strong>üéØ Miss√µes</strong>
    <div class="mission"><span>Dar 50 cliques</span><button class="secondary" onclick="claimMission()">Resgatar</button></div>
  </div>

  <div class="section">
    <button class="secondary" onclick="upgradeClick()">Upgrade Clique ‚Äî <span id="priceClick">20</span></button>
    <button class="secondary" onclick="buyAuto()">Auto (+1/s) ‚Äî <span id="priceAuto">50</span></button>
  </div>
</div>

<div class="modal" id="adModal">
  <div class="box">
    <h3>üì∫ An√∫ncio</h3>
    <p>Simulando an√∫ncio...</p>
    <p>Aguarde <strong id="timer">5</strong>s</p>
  </div>
</div>

<script>
let coins=0, perClick=1, auto=0, level=1, xp=0, xpNeed=100;
let priceClick=20, priceAuto=50, clicks=0;
let adCooldown=0;

function clickCoin(){ coins+=perClick; clicks++; gainXP(5); update(); }
function gainXP(v){ xp+=v; if(xp>=xpNeed){ xp-=xpNeed; level++; xpNeed=Math.round(xpNeed*1.3); perClick++; } }
function upgradeClick(){ if(coins>=priceClick){ coins-=priceClick; perClick++; priceClick=Math.round(priceClick*1.5); update(); } }
function buyAuto(){ if(coins>=priceAuto){ coins-=priceAuto; auto++; priceAuto=Math.round(priceAuto*1.6); update(); } }
function tick(){ coins+=auto; if(adCooldown>0) adCooldown--; update(false); }

function showAd(){ if(adCooldown>0) return alert('Espere para ver outro an√∫ncio');
  const m=document.getElementById('adModal'); m.style.display='flex';
  let t=5; document.getElementById('timer').innerText=t;
  const i=setInterval(()=>{ t--; document.getElementById('timer').innerText=t; if(t<=0){ clearInterval(i); m.style.display='none'; coins+=100; adCooldown=30; update(); } },1000);
}

function claimMission(){ if(clicks>=50){ coins+=50; clicks=0; update(); } }

function update(saveNow=true){
  document.getElementById('coins').innerText=coins;
  document.getElementById('perClick').innerText=perClick;
  document.getElementById('auto').innerText=auto;
  document.getElementById('level').innerText=level;
  document.getElementById('priceClick').innerText=priceClick;
  document.getElementById('priceAuto').innerText=priceAuto;
  document.getElementById('xpbar').style.width=Math.min(100,Math.round((xp/xpNeed)*100))+'%';
}
setInterval(tick,1000); update();
</script>
